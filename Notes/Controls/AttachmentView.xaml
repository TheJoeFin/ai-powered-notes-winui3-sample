<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="Notes.Controls.AttachmentView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Notes.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:models="using:Notes.Models"
    mc:Ignorable="d">

    <UserControl.Resources>
        <!-- Subtle button style for PDF controls -->
        <Style x:Key="SubtleButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontFamily" Value="{ThemeResource ContentControlThemeFontFamily}"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="FontSize" Value="{ThemeResource ControlContentThemeFontSize}"/>
            <Setter Property="UseSystemFocusVisuals" Value="{StaticResource UseSystemFocusVisuals}"/>
            <Setter Property="FocusVisualMargin" Value="-3"/>
            <Setter Property="CornerRadius" Value="{ThemeResource ControlCornerRadius}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <ContentPresenter x:Name="ContentPresenter"
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        Content="{TemplateBinding Content}"
                                        ContentTemplate="{TemplateBinding ContentTemplate}"
                                        ContentTransitions="{TemplateBinding ContentTransitions}"
                                        CornerRadius="{TemplateBinding CornerRadius}"
                                        Padding="{TemplateBinding Padding}"
                                        HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                                        VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"
                                        AutomationProperties.AccessibilityView="Raw">
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal"/>
                                    <VisualState x:Name="PointerOver">
                                        <VisualState.Setters>
                                            <Setter Target="ContentPresenter.Background" Value="{ThemeResource SubtleFillColorSecondaryBrush}"/>
                                        </VisualState.Setters>
                                    </VisualState>
                                    <VisualState x:Name="Pressed">
                                        <VisualState.Setters>
                                            <Setter Target="ContentPresenter.Background" Value="{ThemeResource SubtleFillColorTertiaryBrush}"/>
                                        </VisualState.Setters>
                                    </VisualState>
                                    <VisualState x:Name="Disabled">
                                        <VisualState.Setters>
                                            <Setter Target="ContentPresenter.Foreground" Value="{ThemeResource ButtonForegroundDisabled}"/>
                                        </VisualState.Setters>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                        </ContentPresenter>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid x:Name="Root" Background="#99000000" Padding="20, 60" Tapped="BackgroundTapped">
        <Grid x:Name="ImageGrid"
              HorizontalAlignment="Stretch"
              VerticalAlignment="Stretch"
              MaxWidth="1200"
              Background="#efefef"
              CornerRadius="8">
            <ScrollViewer x:Name="rootScrollViewer"
                ZoomMode="Enabled" MaxZoomFactor="1" MinZoomFactor="0.5"
                HorizontalScrollMode="Auto" HorizontalScrollBarVisibility="Auto"
                VerticalScrollMode="Auto" VerticalScrollBarVisibility="Auto">
                <Viewbox Stretch="Uniform" StretchDirection="Both">
                    <Grid Padding="24">
                        <Image x:Name="AttachmentImage" />
                        <Canvas x:Name="AttachmentImageTextCanvas" />
                    </Grid>
                </Viewbox>
            </ScrollViewer>
            
        </Grid>
        
        <Grid x:Name="PdfGrid"
              HorizontalAlignment="Stretch"
              VerticalAlignment="Stretch"
              MaxWidth="1400"
              Background="#f5f5f5"
              CornerRadius="8">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- PDF Header with document info -->
            <Border Grid.Row="0"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="0,0,0,1"
                    CornerRadius="8,8,0,0">
                <Grid Padding="20,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <FontIcon FontFamily="Segoe Fluent Icons" 
                                  Glyph="&#xE8A5;" 
                                  FontSize="20" 
                                  Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}"
                                  Margin="0,0,10,0"/>
                        <TextBlock x:Name="pdfTitleBlock"
                                   Text="PDF Document"
                                   FontSize="16" 
                                   FontWeight="SemiBold"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0">
                        <TextBlock x:Name="pdfPageInfoBlock"
                                   Text="Loading..."
                                   FontSize="14"
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                   VerticalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                        <Button x:Name="pdfZoomOutButton" 
                                Content="&#xE71F;" 
                                FontFamily="Segoe Fluent Icons"
                                Style="{StaticResource SubtleButtonStyle}"
                                Width="40" Height="32"
                                Click="PdfZoomOut_Click"
                                ToolTipService.ToolTip="Zoom Out"/>
                        <TextBlock x:Name="pdfZoomLevel" 
                                   Text="100%" 
                                   FontSize="12"
                                   VerticalAlignment="Center"
                                   Margin="8,0"/>
                        <Button x:Name="pdfZoomInButton" 
                                Content="&#xE71E;" 
                                FontFamily="Segoe Fluent Icons"
                                Style="{StaticResource SubtleButtonStyle}"
                                Width="40" Height="32"
                                Click="PdfZoomIn_Click"
                                ToolTipService.ToolTip="Zoom In"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- PDF Viewer Area -->
            <ScrollViewer x:Name="pdfScrollViewer"
                          Grid.Row="1"
                          Background="#f5f5f5"
                          ZoomMode="Enabled" 
                          MinZoomFactor="0.5" 
                          MaxZoomFactor="3.0"
                          HorizontalScrollMode="Auto" 
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollMode="Auto" 
                          VerticalScrollBarVisibility="Auto"
                          Padding="40,20,40,40"
                          ViewChanged="PdfScrollViewer_ViewChanged">
                
                <StackPanel x:Name="pdfPagesContainer" 
                            Orientation="Vertical" 
                            Spacing="20"
                            HorizontalAlignment="Center">
                    <!-- PDF pages will be added here dynamically -->
                </StackPanel>
            </ScrollViewer>

            <!-- Loading indicator -->
            <StackPanel x:Name="pdfLoadingPanel"
                        Grid.Row="1"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Spacing="10">
                <ProgressRing x:Name="pdfLoadingProgressRing"
                              IsActive="False"
                              Width="50" Height="50"/>
                <TextBlock Text="Processing PDF..."
                           FontSize="14"
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>
        
        <Grid x:Name="MediaGrid"
              HorizontalAlignment="Stretch"
              VerticalAlignment="Stretch"
              MaxWidth="1200"
              Background="#efefef"
              CornerRadius="8">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>

            <Image x:Name="WaveformImage"
                   Grid.Column="0"
                   Grid.RowSpan="3"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Stretch="UniformToFill"/>
            
            <MediaPlayerElement x:Name="mediaPlayer"
                                VerticalAlignment="Bottom"
                                HorizontalAlignment="Stretch"
                                AreTransportControlsEnabled="True"
                                Grid.Column="0"
                                Grid.RowSpan="3"/>
            
            <StackPanel Grid.Column="1"
                        Grid.Row="0"
                        VerticalAlignment="Stretch"
                        HorizontalAlignment="Stretch"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
                <TextBlock FontSize="18" 
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"
                           Text="Transcription"
                           Margin="10"/>
            </StackPanel>
            <ListView x:Name="transcriptBlocksListView"
                      ItemsSource="{x:Bind TranscriptionBlocks, Mode=OneWay}"
                      Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                      Grid.Column="1"
                      Grid.Row="1"
                      Padding="5"
                      SelectionChanged="TranscriptBlocksListView_SelectionChanged">
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="models:TranscriptionBlock">
                        <StackPanel Margin="3">
                            <TextBlock Text="{x:Bind StartDisplayText}"
                                       FontWeight="Bold"
                                       FontSize="10"/>
                            <TextBlock Text="{x:Bind Text}"
                                       TextWrapping="Wrap"/>
                        </StackPanel>

                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <ProgressRing x:Name="transcriptLoadingProgressRing"
                          Grid.Column="1"
                          Grid.Row="1"
                          IsActive="False"
                          VerticalAlignment="Center"
                          HorizontalAlignment="Center"/>

            <StackPanel Grid.Column="1"
                        Grid.Row="2"
                        VerticalAlignment="Stretch"
                        HorizontalAlignment="Stretch"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}">
                <ToggleSwitch x:Name="scrollEnableToggle"
                              HorizontalAlignment="Center" 
                              VerticalAlignment="Center"
                              Margin="10"
                              FontSize="10"
                              OnContent="Auto-Scroll Enabled"
                              OffContent="Auto-Scroll Disabled"
                              IsOn="{x:Bind AutoScrollEnabled, Mode=TwoWay}"/>

            </StackPanel>


        </Grid>
    </Grid>
</UserControl>
